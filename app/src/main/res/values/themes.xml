<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.KnockMe" parent="android:Theme.Material.Light.NoActionBar" >
        <!-- Define your app's main theme colors here if not already defined elsewhere -->
        <!-- For example:
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        -->
    </style>

    <!-- Theme for FirebaseUI Auth activities -->
    <!-- The name "Theme.FirebaseUI.Auth" will be referenced as R.style.Theme_FirebaseUI_Auth in code -->
    <style name="Theme.FirebaseUI.Auth" parent="FirebaseUI">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- You can also set a logo for the FirebaseUI screens -->
        <!-- <item name="firebase_auth_ui_logo">@drawable/your_app_logo_name</item> -->
        <!-- To ensure text is readable on your background -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>
