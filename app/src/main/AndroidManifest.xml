<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KnockMe">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KnockMe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FirebaseUI Auth activities -->
        <activity
            android:name="com.firebase.ui.auth.ui.idp.AuthMethodPickerActivity"
            android:theme="@style/Theme.FirebaseUI.Auth"
            tools:replace="android:theme"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.firebase.ui.auth.ui.email.EmailActivity"
            android:theme="@style/Theme.FirebaseUI.Auth"
            tools:replace="android:theme"
            tools:ignore="Instantiatable" />
        <!-- If you use other specific FirebaseUI activities like GoogleSignInActivity, etc. 
             and encounter similar theme issues, you might need to add them here as well. -->

    </application>

</manifest>